    <EditText
        android:id="@+id/otp_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/et_background"
        android:layout_marginTop="9dp"
        android:padding="9dp"
        android:hint="enter the OTP"
        android:ems="11"
        android:inputType="number"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_number_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="9dp"
        app:cardElevation="2dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/disable_button">

        <TextView
